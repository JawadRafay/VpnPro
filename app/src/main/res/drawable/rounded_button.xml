<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#494A4B" /> <!-- Gray color when pressed -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- White border when pressed -->
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke
                android:width="2dp"
                android:color="#808080" /> <!-- Gray border in normal state -->
        </shape>
    </item>
</selector>
